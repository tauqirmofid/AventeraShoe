<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <!-- Main Content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">





        <!-- Search Bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="8dp"
            android:visibility="gone"


            android:layout_marginTop="56dp"
            android:paddingTop="56dp"
            android:padding="8dp">

            <!-- Minus Icon (Close Search) -->
            <ImageView
                android:id="@+id/iv_search_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:contentDescription="Close Search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="8dp" />

            <!-- Search Bar -->
            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:queryHint="Search Products..."
                android:background="@android:color/white"
                app:layout_constraintStart_toEndOf="@id/iv_search_icon"
                app:layout_constraintEnd_toStartOf="@id/iv_close_search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />


            <!-- Search Icon -->
            <ImageView
                android:id="@+id/iv_close_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/minus"
                android:contentDescription="Search"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="8dp" />







        </androidx.constraintlayout.widget.ConstraintLayout>











    <!-- Sticky Header -->
    <com.google.android.material.card.MaterialCardView

        android:id="@+id/stickyHeader"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#279931"
        app:shapeAppearance="@style/StickyHeaderBottomCorners">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="8dp">

            <!-- Nav Button -->
            <ImageView
                android:id="@+id/iv_manu_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_manu"
                android:contentDescription="Manu Button"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp" />

            <!-- Store Logo -->
            <ImageView
                android:id="@+id/iv_store_logo"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:src="@drawable/logowhite"
                android:contentDescription="Store Logo"
                android:layout_centerInParent="true"
                android:scaleType="centerInside" />

            <!-- Back Button -->
            <ImageView
                android:id="@+id/iv_search_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:contentDescription="Search Button"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>







    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage"
    android:paddingTop="46dp"
    android:id="@+id/main">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">




        <!-- Banner Image -->
        <ImageView
            android:id="@+id/bannerImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="banner_image"
            android:src="@drawable/banner_homepage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnSeeAllProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All Products"
            android:backgroundTint="@color/lime"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/bannerImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Bold Green Text -->
        <TextView
            android:id="@+id/tvCustomersLove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our customers love it!"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/btnSeeAllProducts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- Smaller Black Text -->
        <TextView
            android:id="@+id/tvSatisfiedCustomers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12,523+ SATISFIED CUSTOMERS"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvCustomersLove"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Button to See All Products -->


        <!-- Horizontal Scrolling Bar -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvSatisfiedCustomers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:overScrollMode="never"> <!-- Prevent overscroll glow -->

            <LinearLayout
                android:id="@+id/linearLayoutImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Original Images -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="150dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/sample_image_1"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="150dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/sample_image_2"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="150dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/sample_image_3"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="150dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/sample_image_4"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="150dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/sample_image_5"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitCenter" />

                <!-- Duplicate the first image -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="150dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/sample_image_1"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="150dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/sample_image_2"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="150dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/sample_image_3"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="150dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/sample_image_4"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitCenter" />



            </LinearLayout>
        </HorizontalScrollView>


        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="6dp"
            android:id="@+id/recyclerViewRecentProductscard"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalScrollView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <!-- Header Text for Recent Shoes -->
                <TextView
                    android:id="@+id/tvRecentShoesHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Most Recent Shoes"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="-12dp" />

                <!-- RecyclerView for Recent Shoes -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewRecentProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-6dp"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_product_customer" />

                <!-- Horizontal Scroll Indicator -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_scroll_indicator"
                        android:contentDescription="Scroll indicator"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Swipe to explore more"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:id="@+id/missionStatementCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginBottom="60dp"
            android:elevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#DBDBDB"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewRecentProductscard"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"

                >

                <!-- Title Text -->
                <TextView
                    android:id="@+id/missionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience ultimate foot comfort with Aventera!"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_gravity="center" />

                <!-- Description Text -->
                <TextView
                    android:id="@+id/missionDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="At Aventera, our mission is personal: we strive to improve your foot health and relieve foot pain. Our supportive, high-performance shoes are designed for natural foot alignment and all-day comfort with every step."
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvFeaturesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What makes our barefoot shoes so great?"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/missionStatementCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/card"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvFeaturesTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp">

            <!-- Left Feature Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardFeatureLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.45"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp"
                android:elevation="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <!-- Feature Image -->
                    <ImageView
                        android:id="@+id/featureImageLeft"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/feature_image_1"
                        android:contentDescription="Feature Icon"
                        android:layout_marginBottom="8dp" />

                    <!-- Feature Title -->
                    <TextView
                        android:id="@+id/featureTitleLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wide toe box"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <!-- Feature Description -->
                    <TextView
                        android:id="@+id/featureDescriptionLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="The wide toe of the shoe lets your toes lie in their natural way, allowing you to move pain-free according to your body's natural movements."
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Right Feature Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardFeatureRight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.45"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                android:elevation="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <!-- Feature Image -->
                    <ImageView
                        android:id="@+id/featureImageRight"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/feature_image_2"
                        android:contentDescription="Feature Icon"
                        android:layout_marginBottom="8dp" />

                    <!-- Feature Title -->
                    <TextView
                        android:id="@+id/featureTitleRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ergonomic sole"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <!-- Feature Description -->
                    <TextView
                        android:id="@+id/featureDescriptionRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="The ultra-thin sole provides protection while still feeling the world beneath your feet, making you almost automatically one with your surroundings."
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tvCustomerReviewsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See why our customers are so satisfied..."
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/recyclerViewCustomerReviews1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F8E9"

            app:layout_constraintTop_toBottomOf="@id/tvCustomerReviewsTitle">




        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCustomerReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:paddingEnd="8dp"

            android:paddingStart="8dp"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/tvCustomerReviewsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            tools:listitem="@layout/item_customer_review" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewCustomerReviews1"
            android:gravity="center"
            android:layout_marginTop="16dp"
           >

            <!-- 30 Day Trial -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"

                android:layout_weight="1"
                android:elevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@android:color/holo_green_light">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="6dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_30_day_trial"
                        android:contentDescription="30 Day Trial" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 Day Trial"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:breakStrategy="simple"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 100% Comfort Guarantee -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:elevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@android:color/holo_green_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="6dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:breakStrategy="simple"

                        android:src="@drawable/ic_comfort_guarantee"
                        android:contentDescription="100% Comfort Guarantee" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100% Comfort Guarantee"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Free Delivery -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:elevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@android:color/holo_green_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="6dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_free_delivery"
                        android:contentDescription="Free Delivery" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Free delivery"
                        android:breakStrategy="simple"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 12,523 Satisfied Customers -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:elevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@android:color/holo_green_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="6dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_satisfied_customers"
                        android:contentDescription="Satisfied Customers" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12,523 Satisfied\ncustomers"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:breakStrategy="simple"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSearchResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:padding="8dp"
            android:layout_marginTop="110dp"
            android:background="#00FFFFFF"
            android:visibility="gone"
            android:elevation="16dp"
